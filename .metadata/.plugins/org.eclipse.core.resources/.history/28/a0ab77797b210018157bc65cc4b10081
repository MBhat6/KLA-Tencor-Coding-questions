package com.stringReversal;

import java.util.*;
import com.stringReversal.ReverseString;

public class DriverManager {

	public static void main(String[] args) {
		
		ReverseString myObj = new ReverseString();
		
		Scanner in = new Scanner(System.in);
		
		System.out.println("\nWelcome to the program. This program eanbles yoy to reverse the words in a sentence\n\n");
		System.out.print("Please enter the string to be reversed: ");
		
		String str = in.nextLine();
		myObj.reverse(str);
		
	}

}
